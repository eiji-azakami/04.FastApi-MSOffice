{
    // IntelliSense を使用して利用可能な属性を学べます。
    // 既存の属性の説明をホバーして表示します。
    // 詳細情報は次を確認してください: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python デバッガー: uvicorn",
            "type": "debugpy",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "app.main:app",
                "--reload",
                "--no-access-log"
            ],
            "jinja": true,
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal"
        },
        {
            "name": "Python デバッガー: pytest",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/venv/Scripts/pytest.exe",
            "args": [
                "--maxfail=3",
                "--disable-warnings",
                "-v"
            ],
            "console": "integratedTerminal",
            "justMyCode": false
        }
    ]
}